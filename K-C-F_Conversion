  public conversionApp(){
    Jframe guiFrame = new JFrame();
    
    //setting up the setting of the JFrame
    guiFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    guiFrame.setTitle("Kelvin, Celsius, and Fahrenheit Conversion");
    guiFrame.setSize(300,250);
    guiFrame.setLocationRelativeTo(null);
    
    //now the work starts
    String[] TempOptions = {"Kelvin", "Celsius", "Fahrenhiet"};
    
    
    //First JPanel for picking the two temperatures
    final JPanel comboPanel = new JPanel();
    
    JLabel combeLb1 = new JLabel("First temperature:");
    JComboBox FirstTemp = new JComboBox(TempOptions);
    comboPanel.add(comboLb1);
    comboPanel.add(FirstTemp);
    
    JLabel comboLb2 = new JLabel("Converted to :");
    JComboBox SecondTemp = new JComboBox(TempOptions);
    comboPanel.add(comboLb2);
    comboPanel.add(SecondTemp);
    
    //now we need to add the answer panel and conversion button. Oh and the input box for your given temperature
  }
  
}
