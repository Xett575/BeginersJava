import javax.swing.JOptionPane;
import java.util.Scanner;

public class SimpleGui2{
    public static void main(String[]args){
        
                        
        //Pop up an input box 
        String a=JOptionPane.showInputDialog(null,"Enter your first number:");
        double da = Double.parseDouble(a);
        
        String operation=JOptionPane.showInputDialog(null,"Enter the operation");
        
        //Pop up an input box
        String b=JOptionPane.showInputDialog(null,"Enter your second number:");
        double db = Double.parseDouble(b);
       
                
        
        double answer = da + db;
        double answer1 = da - db;
        double answer2 = da * db;
        double answer3 = da / db;
        
        if(operation.equals("+")){
            JOptionPane.showMessageDialog(null,"your answer is " + answer );
        }
        if(operation.equals("-")){
            JOptionPane.showMessageDialog(null,"your answer is " + answer1 );
        }
        if(operation.equals("*")){
            JOptionPane.showMessageDialog(null,"your answer is " + answer2 );
        }
        if(operation.equals("/")){
            JOptionPane.showMessageDialog(null,"your answer is " + answer3 );
        }
    }
}
